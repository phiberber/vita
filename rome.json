{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
    "formatter": {
        "enabled": true,
        "lineWidth": 100,
        "indentSize": 4,
        "indentStyle": "space"
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "single",
            "quoteProperties": "asNeeded",
            "trailingComma": "none"
        }
    },
	"linter": {
		"rules": {
            "suspicious": {
                "noExplicitAny": "off"
            },
			"recommended": true
		}
	}
}
