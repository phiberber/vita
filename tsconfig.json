{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "noImplicitReturns": false,
    "noPropertyAccessFromIndexSignature": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "#/*": ["./*"]
    }
  },
  "exclude": ["/dist", "/node_modules"]
}
